<div class="mathungdan">
    <div class="w-100 h-100 position-absolute top-0 start-0 overflow-hidden d-flex flex-wrap">
        <div class="index-number">@Index</div>
        @for (int i = 0; i < ShotCount && i < 16; i++)
        {
            <img src="images/shot.png" alt="shot" />
        }
        @if (ShotCount > 16)
        {
            <div class="shot-plus">
                +@(ShotCount - 16)
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public int ShotCount { get; set; }
}
